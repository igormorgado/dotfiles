#!/bin/bash
checkidle_status="/var/run/checkidle/status" 

if [ -r "${checkidle_status}" ]; then
	CI=( $( cat ${checkidle_status} ) )
fi

printf -v statusbar "%s,%s(%s)" "${CI[1]}" "${CI[2]}" "${CI[3]}"
printf -v statusbar "%s %s" "${statusbar}" "$( cut -d " " -f 1-3 /proc/loadavg )"

echo $statusbar
